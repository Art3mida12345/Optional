@model Optional.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<div class="login">
    <div class="form">
    <h2>Login to the site</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary()
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
        <p>
            <label for="Login">Login</label>
            @Html.EditorFor(x => x.Login)
        </p>
        <p>
            <label for="Password">Password</label>
            @Html.EditorFor(x => x.Password)
        </p>
        <p><button type="submit" class="btn-login">LogIn</button></p>
    </div>
}
@Html.ActionLink("Create an account", "Register", new { controller = "Student", area = "Student" })

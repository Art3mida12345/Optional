<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/icon.ico" type="image/x-icon" />
    <title>@ViewBag.Title - Optional.com</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Optional", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Student", "Index", new { area = "Student", controller = "Student" })</li>
                    <li>@Html.ActionLink("Lecturer", "Index", new { area = "Lecturer", controller = "Lecturer" })</li>
                    <li>@Html.ActionLink("Admin", "Index", new { area = "Admin", controller = "Admin" })</li>
                    <li>@Html.ActionLink("LogOut", "Logout", new { area = "", controller = "Account" })</li>
                    <li>@Html.ActionLink("LogIn", "Login", new { area = "", controller = "Account" })</li>
                </ul>
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <hr />
    <footer>
        <p class="text-center">&copy; @DateTime.Now.Year - Optional.com</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
